<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LS.MAUIClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:routes="clr-namespace:LS.MAUIClient.Pages.Common" 
    xmlns:pages="clr-namespace:LS.MAUIClient.Pages" 
    xmlns:pagesRectangle="clr-namespace:LS.MAUIClient.Pages.Rectangles" 
    Title="LS.MAUIClient">

    <FlyoutItem Title="Главная страница" >
        <Tab>
            <ShellContent
       Title="Home"
       ContentTemplate="{DataTemplate pages:MainPage}"
       Route="{Static routes:Routes.MainRoute}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Прямоугольники" >
        <Tab>
            <ShellContent
    Title="Home"
    ContentTemplate="{DataTemplate pagesRectangle:RectanglePage}"
    Route="{Static routes:Routes.RectangleRoute}" />
        </Tab>
    </FlyoutItem>


</Shell>
